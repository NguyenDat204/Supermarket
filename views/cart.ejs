<%- include('partials/header') %>
<h2 class="section-title"><i class="fas fa-shopping-cart"></i> GIỎ HÀNG CỦA BẠN</h2>

<% if (cartItems.length === 0) { %>
    <div class="empty-state">
        <p>Giỏ hàng đang trống.</p>
        <a href="/orders/place" class="btn-primary">Tiếp tục mua sắm</a>
    </div>
<% } else { %>
    <div class="table-responsive">
        <table>
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Tổng cộng</th>
                </tr>
            </thead>
            <tbody>
                <% let grandTotal = 0; %>
                <% cartItems.forEach(item => { %>
                    <% grandTotal += item.total; %>
                    <tr>
                        <td><%= item.product.name %></td>
                        <td>$<%= item.product.price %></td>
                        <td><%= item.quantity %></td>
                        <td>$<%= item.total %></td>
                    </tr>
                <% }) %>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" style="text-align: right;"><strong>TỔNG THANH TOÁN:</strong></td>
                    <td><strong style="color: #e74c3c; font-size: 1.2em;">$<%= grandTotal %></strong></td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div style="margin-top: 20px; text-align: right;">
        <a href="/orders/place" class="btn-back">Mua thêm</a>
        <form action="/orders/checkout" method="POST" style="display:inline;">
            <button type="submit" class="btn-primary" style="background-color: #2ecc71;">
                <i class="fas fa-check-circle"></i> Xác nhận thanh toán
            </button>
        </form>
    </div>
<% } %>
<%- include('partials/footer') %>